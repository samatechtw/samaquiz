      "@frontend/components/svg": ["web/samaquiz/src/components/svg/index.ts"],
      "@frontend/api": ["web/samaquiz/src/api/index.ts"],
      "@frontend/features": ["web/samaquiz/src/features/index.ts"],
      "@frontend/store": ["web/samaquiz/src/store/index.ts"],
